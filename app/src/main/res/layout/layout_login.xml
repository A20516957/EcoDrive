<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nk11">

    <EditText
        android:id="@+id/emailLogin"
        android:layout_width="284dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:background="@drawable/serch_round"
        android:ems="10"
        android:drawableLeft="@drawable/username"
        android:hint="Email"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/passwordLogin"
        android:layout_width="281dp"
        android:layout_height="35dp"
        android:layout_below="@+id/emailLogin"
        android:layout_alignStart="@+id/emailLogin"
        android:layout_marginTop="32dp"
        android:background="@drawable/serch_round"
        android:ems="10"
        android:drawableLeft="@drawable/password"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/LoginB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBarLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/serch_round"
        android:text="Log In" />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordLogin"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="184dp"
        android:elevation="0dp"
        android:focusable="auto"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/RegisterLink"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginB"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="128dp"
        android:onClick="onClick"
        android:text="Click Here to Register"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>